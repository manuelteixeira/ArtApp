<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArtApp.Views.WorksPage"
             xmlns:ViewModels="clr-namespace:ArtApp.ViewModels;assembly=ArtApp">

  <ContentPage.BindingContext>
    <ViewModels:WorksViewModel/>
  </ContentPage.BindingContext>


  <StackLayout Orientation="Vertical" Padding="10,10,10,10">
    <Button x:Name="createWorkButton" Text="Create"/>
    <SearchBar Text="{Binding SearchText, Mode=TwoWay}" Placeholder="Search" TextChanged="SearchBar_OnTextChanged"/>


    <ListView x:Name="WorkListView" ItemsSource="{Binding WorksSearch}" HasUnevenRows="True" SeparatorVisibility="Default">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ViewCell.ContextActions>
              <MenuItem Text="Edit" Clicked="Edit_OnClicked" CommandParameter="{Binding .}" />
              <MenuItem Text="Delete" Clicked="Delete_OnClicked"/>
            </ViewCell.ContextActions>
            <StackLayout Orientation="Horizontal">
              <Label Text="{Binding Title}"/>
              <Label Text="{Binding Authors}" />
              <Label Text="{Binding Classification}"/>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>

    </ListView>
  </StackLayout>





</ContentPage>