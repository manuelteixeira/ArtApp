<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArtApp.Pages.LoginPage">
  

  <ContentPage.Content>
    <StackLayout Padding="10,30,10,10" Spacing = "10">
      <Label Text="Art" Font = "30" HorizontalOptions="Center" VerticalOptions="Center"/>
      <ActivityIndicator x:Name="waitAcitivityIndicator" HorizontalOptions="Center" VerticalOptions="Center"/>
      <Label Text="Login" HorizontalOptions="Center" VerticalOptions="Center"/>
      <Label Text="Username" HorizontalOptions="Start" VerticalOptions="Center"/>
      <Entry x:Name="userEntry" Placeholder="Username" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
      <Label Text="Password" HorizontalOptions="Start" VerticalOptions="Center"/>
      <Entry x:Name="userPassword" Placeholder="Password" IsPassword="True" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
      <Button x:Name="enterButton" Text="Login" BackgroundColor="Navy" TextColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/> 
    
    </StackLayout>
  </ContentPage.Content>
</ContentPage>