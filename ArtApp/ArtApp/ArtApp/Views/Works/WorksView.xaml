<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ArtApp.Views.WorksView">

  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Add" Command="{Binding CreateWorkCommand}"></ToolbarItem>
  </ContentPage.ToolbarItems>

  <ContentPage.Content>
    <StackLayout>
      <Label Text="Works" HorizontalOptions="Center" FontSize="20"/>
      <SearchBar Text="{Binding SearchText, Mode=TwoWay}" Placeholder="Search By Title" TextChanged="SearchBar_OnTextChanged"/>
      <ListView ItemsSource="{Binding WorksSearch}" HasUnevenRows="True"
                SeparatorVisibility="Default" SelectedItem="{Binding WorkSelected}"
                IsPullToRefreshEnabled="True" RefreshCommand="{Binding ResfreshWorkListCommand}"
                IsRefreshing="{Binding isBusy, Mode=OneWay}">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ImageCell ImageSource="{Binding PhotoPath}" Text="{Binding Title}" Detail="{Binding Authors[0].Name}" />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>